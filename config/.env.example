# ===========================================
# MCP Floating Ball - AI助手环境配置
# ===========================================

# 月之暗面Kimi API（主要对话AI）
MOONSHOT_API_KEY=your_moonshot_api_key_here

# 阿里云DashScope API（语音识别和TTS）
ALIBABA_CLOUD_ACCESS_KEY_ID=your_alibaba_api_key_here

# 秘塔AI搜索API（增强搜索功能）
METASO_API_KEY=your_metaso_api_key_here

# ===========================================
# AI模型配置
# ===========================================

# Kimi模型配置
KIMI_MODEL=kimi-k2-turbo-preview
KIMI_BASE_URL=https://api.moonshot.cn/v1

# DashScope模型配置
DASHSCOPE_TTS_MODEL=sambert-zhiwei-v1
DASHSCOPE_ASR_MODEL=paraformer-realtime-v2
DASHSCOPE_VISION_MODEL=qwen-vl-plus

# ===========================================
# 应用配置
# ===========================================

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# 调试模式
DEBUG=false

# 缓存配置
CACHE_TTL=3600
CACHE_DIR=./data/cache

# 临时文件目录
TEMP_DIR=./data/temp

# 音频配置
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_CHUNK_SIZE=1024

# ===========================================
# 系统配置
# ===========================================

# 系统平台（自动检测，无需手动设置）
# PLATFORM=windows/linux/darwin

# 最大并发任务数
MAX_CONCURRENT_TASKS=10

# 请求超时时间（秒）
REQUEST_TIMEOUT=30

# 重试配置
MAX_RETRIES=3
RETRY_DELAY=1

# ===========================================
# 开发配置
# ===========================================

# 开发模式
DEVELOPMENT=false

# 测试模式
TESTING=false

# 热重载
AUTO_RELOAD=false

# ===========================================
# 前端配置（预留）
# ===========================================

# 前端静态文件目录
STATIC_DIR=./static

# 前端模板目录
TEMPLATE_DIR=./templates

# CORS配置
CORS_ORIGINS=http://localhost:3000,http://localhost:5173